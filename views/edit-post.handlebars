<article>  
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <input name="post-title" type="text" value="{{post.title}}" />      
    </div>
    <div>
      Posted by you on {{format_date post.created_at}}
      |
      {{post.comments.length}} {{format_plural "comment" post.comments.length}}
    </div>
    <div>
      <label for="post-text">Post</label>
      <textarea id="post-text" name="post-text">{{post.post_text}}</textarea>
    </div>
    <button type="submit" id="save-changes">Save Changes</button>
    <button type="button" id="delete-post" class="delete-post-btn">Delete Post</button>
  </form>
</article>


<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>
</body>