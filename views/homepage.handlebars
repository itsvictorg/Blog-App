<html>

<head>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <title>Homepage</title>
</head>

<body>
  
  {{> nav}}

{{#if posts.length}}

<section class = 'container'>
  <h2>All Posts</h2>
  <button type="submit" class="btn btn-small waves-effect waves-light z-depth-3 light-blue darken-3" id = "new-post"><a href="/dashboard/new">Add New Post</a></button>
</section>

<section>
  
  <ol class="post-list">
    {{#each posts as |post|}}
    <div>
      {{> post-info post}}      
    </div>
    {{/each}}
  </ol>
</section>
{{else}}
<center>
<section>
  <h3>No posts made yet</h3>
  <button type="submit" class="btn btn-small waves-effect waves-light z-depth-3 light-blue darken-3" id = "new-post"><a href="/dashboard/new">Add New Post</a></button>
</section>
</center>
{{/if}}
      
              

    <script src="./js/logout.js"></script>
</body>

</html>