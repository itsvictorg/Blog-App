<a href="post/{{id}}">
  <div class="card grey lighten-3 container">
    <div class="card-content black-text">
      <h5>Posted By {{User.user_name}} on {{format_date created_at}}</h5>
      <h3>{{title}}</h3>
      <p>{{post_text}}</p>
      <br>
      <p class = "deep-orange-text lighten-2">{{Comments.length}} comments</p>
    </div>
</a>    
